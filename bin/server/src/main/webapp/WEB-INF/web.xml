<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Currency Conversion Web Service</display-name>
    <description>Currency Conversion Web Service using Apache Axis2</description>

    <!-- Context Parameters -->
    <context-param>
        <param-name>axis2.repository.path</param-name>
        <param-value>WEB-INF</param-value>
    </context-param>

    <!-- Axis2 Context Listener -->
    <listener>
        <listener-class>org.apache.axis2.transport.http.AxisServletListener</listener-class>
    </listener>

    <!-- Axis2 Servlet for SOAP -->
    <servlet>
        <servlet-name>AxisServlet</servlet-name>
        <servlet-class>org.apache.axis2.transport.http.AxisServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <!-- Servlet Mappings -->
    <servlet-mapping>
        <servlet-name>AxisServlet</servlet-name>
        <url-pattern>/services/*</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>
